<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>


<Pane prefHeight="310.0" prefWidth="370.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.gui.AddQuestionController">
   <children>
      <VBox alignment="CENTER" layoutX="21.0" layoutY="11.0" spacing="5.0">
         <children>
      				<TextArea fx:id="taNotes" prefHeight="161.0" prefWidth="328.0" promptText="Note description" />
      				<JFXComboBox fx:id="cbDisplayedFor" focusColor="#48a832" promptText="Displayed for" />
            <HBox alignment="CENTER" spacing="10.0">
               <children>
            				<JFXTextField fx:id="tfQuestionPoints" alignment="BOTTOM_LEFT" focusColor="#48a832" labelFloat="true" prefWidth="110.0" promptText="Question Points">
                     <HBox.margin>
                        <Insets top="15.0" />
                     </HBox.margin>
                  </JFXTextField>
            				<JFXButton fx:id="btnAddQuestion" alignment="CENTER" onAction="#onClickAddQuestion" style="-fx-background-color: #48a832; -fx-background-radius: 10;" text="Add Question" textFill="WHITE">
                     <HBox.margin>
                        <Insets top="15.0" />
                     </HBox.margin>
                  </JFXButton>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <Label fx:id="messageLabel">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </children>
</Pane>
