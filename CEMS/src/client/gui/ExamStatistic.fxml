<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="768.0" prefWidth="754.0" style="-fx-background-color: #ffff;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.gui.ExamStatisticController">
   <children>
      <VBox layoutX="27.0" layoutY="4.0" prefHeight="768.0" spacing="5.0">
         <children>
            <HBox alignment="CENTER" spacing="50.0">
               <children>
                  <JFXComboBox fx:id="cbExamCourse" focusColor="#48a832" onAction="#onClickExamCourse" prefHeight="28.0" prefWidth="145.0" promptText="Exam Course" style="-fx-alignment: center;" />
                  <JFXComboBox fx:id="cbExamSubject" focusColor="#48a832" onAction="#onClickExamSubject" prefHeight="28.0" prefWidth="145.0" promptText="Exam Subject" style="-fx-alignment: center;" />
               </children>
            </HBox>
            <Label text="Executed Exams" textFill="#333333">
               <font>
                  <Font name="Calibri Bold" size="16.0" />
               </font>
            </Label>
            <TableView fx:id="tvExecutedExams" prefHeight="307.0" prefWidth="700.0">
              <columns>
                <TableColumn fx:id="tcID" prefWidth="99.0" style="-fx-alignment: center;" text="ID" />
                <TableColumn fx:id="tcSubject" prefWidth="145.0" style="-fx-alignment: center;" text="Subject" />
                  <TableColumn fx:id="tcCourse" prefWidth="136.0" style="-fx-alignment: center;" text="Course" />
                  <TableColumn fx:id="tcDate" prefWidth="170.0" style="-fx-alignment: center;" text="Date" />
                  <TableColumn fx:id="tcDetails" prefWidth="148.0" style="-fx-alignment: center;" text="Additional Details" />
              </columns>
            </TableView>
            <HBox alignment="CENTER" spacing="50.0">
               <children>
                  <Label text="Avarage:" />
                  <Label fx:id="avgLabel" />
                  <Label text="Median:" />
                  <Label fx:id="medLabel" />
               </children>
            </HBox>
            <LineChart fx:id="clExamStatistic">
              <xAxis>
                <CategoryAxis label="Students" side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis label="Grades" side="LEFT" />
              </yAxis>
            </LineChart>
         </children>
      </VBox>
   </children>
</Pane>
