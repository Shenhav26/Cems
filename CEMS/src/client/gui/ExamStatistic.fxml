<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="768.0" prefWidth="754.0" style="-fx-background-color: #ffff;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.gui.ExamStatisticController">
   <children>
      <Label layoutX="259.0" text="Exam Statistic" textFill="#3d9a26">
         <font>
            <Font size="39.0" />
         </font>
      </Label>
      <VBox layoutX="27.0" layoutY="40.0" prefHeight="768.0">
         <children>
            <Label text="Executed Exams" textFill="#333333">
               <font>
                  <Font name="Calibri Bold" size="16.0" />
               </font>
            </Label>
            <TableView fx:id="tvExecutedExams" prefHeight="250.0" prefWidth="630.0">
              <columns>
                <TableColumn fx:id="tcID" prefWidth="79.0" style="-fx-alignment: center;" text="ID" />
                  <TableColumn fx:id="tcTeacher" prefWidth="136.0" style="-fx-alignment: center;" text="Teacher" />
                <TableColumn fx:id="tcSubject" prefWidth="133.0" style="-fx-alignment: center;" text="Subject" />
                  <TableColumn fx:id="tcCourse" prefWidth="118.0" style="-fx-alignment: center;" text="Course" />
                  <TableColumn fx:id="tcDate" prefWidth="114.0" style="-fx-alignment: center;" text="Date" />
                  <TableColumn fx:id="tcDetails" prefWidth="118.0" style="-fx-alignment: center;" text="Question List" />
              </columns>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </TableView>
            <VBox>
               <children>
                  <HBox alignment="CENTER" spacing="50.0">
                     <children>
                        <Label text="Avarage:" />
                        <Label fx:id="avgLabel" />
                        <Label text="Median:" />
                        <Label fx:id="medLabel" />
                     </children>
                     <padding>
                        <Insets top="30.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER" spacing="50.0">
                     <children>
                        <Label text="Total Students:" />
                        <Label fx:id="labelTotalStudents" />
                        <Label fx:id="labelFinishedStudents" text="Finished Students" />
                        <Label fx:id="labelFinishedStudents" />
                        <Label text="Unfinished Students" />
                        <Label fx:id="labelUnfinishedStudents" />
                     </children>
                     <padding>
                        <Insets top="30.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
            <BarChart fx:id="bcExamStatistic" prefHeight="337.0" prefWidth="700.0">
              <xAxis>
                <CategoryAxis label="Students" side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis label="Grades" side="LEFT" />
              </yAxis>
               <padding>
                  <Insets right="10.0" top="20.0" />
               </padding>
            </BarChart>
         </children>
      </VBox>
   </children>
</Pane>
