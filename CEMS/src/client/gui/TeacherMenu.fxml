<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane prefHeight="600.0" prefWidth="270.0" style="-fx-background-color: #333333;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.gui.TeacherMenuController">
	<children>
		<ImageView fitHeight="85.0" fitWidth="200.0" layoutX="96.0" layoutY="30.0" pickOnBounds="true" preserveRatio="true">
			<image>
				<Image url="@../../../GuiPrototype/logo3.jpeg" />
			</image>
		</ImageView>
		<VBox layoutY="150.0" prefHeight="450.0" prefWidth="270.0" style="-fx-background-color: #333333;">
			<children>
				<JFXButton fx:id="btnCreateExam" onAction="#onClickCreateExam" prefHeight="300.0" prefWidth="270.0" ripplerFill="#48a832" style="-fx-background-color: #333333;" text="Create Exam" textFill="WHITE">
					<graphic>
						<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="@../../../GuiPrototype/test.png" />
							</image>
						</ImageView>
					</graphic>
				</JFXButton>
				<JFXButton fx:id="btnCreateQuestion" onAction="#onClickCreateQuestion" prefHeight="300.0" prefWidth="270.0" ripplerFill="#48a832" style="-fx-background-color: #333333;" text="Create Question" textFill="WHITE">
					<graphic>
						<ImageView fitHeight="16.0" fitWidth="13.0" pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="@../../../GuiPrototype/question.png" />
							</image>
						</ImageView>
					</graphic>
				</JFXButton>
				<JFXButton fx:id="btnStartExam" onAction="#onClickStartExam" prefHeight="300.0" prefWidth="270.0" ripplerFill="#48a832" style="-fx-background-color: #333333;" text="Start Exam" textFill="WHITE">
					<graphic>
						<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="@../../../GuiPrototype/start.png" />
							</image>
						</ImageView>
					</graphic>
				</JFXButton>
				<JFXButton fx:id="btnStatistic" onAction="#onClickExamStatistic" prefHeight="300.0" prefWidth="270.0" ripplerFill="#48a832" style="-fx-background-color: #333333;" text="Exam Statistic" textFill="WHITE">
					<graphic>
						<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="@../../../GuiPrototype/statistic.png" />
							</image>
						</ImageView>
					</graphic>
				</JFXButton>
            <JFXButton fx:id="btnGradeApproval" onAction="#onClickGradeApproval" prefHeight="300.0" prefWidth="270.0" ripplerFill="#48a832" style="-fx-background-color: #333333;" text="Grade Approval" textFill="WHITE">
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/approval.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton fx:id="btnLogout" onAction="#onClickLogout" prefHeight="300.0" prefWidth="270.0" ripplerFill="#48a832" style="-fx-background-color: #333333;" text="Logout" textFill="WHITE">
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/logout.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
			</children>
		</VBox>
	</children>
</Pane>
